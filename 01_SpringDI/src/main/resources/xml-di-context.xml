<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- new를 대신하는 설정들을 담당하는 xml 문서 -->
	
	<!-- 생성자를 통한 의존성 주입 -->
	<bean id="person1" class="com.kh.spring.di.xml.vo.Person">
		<constructor-arg index="0" value="홍길동" />
		<constructor-arg index="1" ref="job"/>
	</bean>
	
	<bean id="job" class="com.kh.spring.di.xml.vo.Programmer" />
	<!-- <bean id="job" class="com.kh.spring.di.xml.vo.Gunmulju" /> -->
	
	<!-- Setter를 통한 의존성 주입 -->
	<bean id="person2" class="com.kh.spring.di.xml.vo.Person">
		<property name="name" value="고길동" />
		<property name="myJob" ref="job2" />
	</bean>

	<bean id="job2" class="com.kh.spring.di.xml.vo.Programmer" />

</beans>
